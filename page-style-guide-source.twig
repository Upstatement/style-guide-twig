						</div> <!-- /.form-row -->
					</form> <!-- /.form-large -->
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~~~~~~~
			 Radio Button
			~~~~~~~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Radio Button' } %}

				{% block markup %}
					<form class="form">
						<div class="radio-mod">
							<input class="radio-btn" type="radio" value="question" name="poll-question" id="question-01"> <label class="radio-label" for="question-01">Radio Option 01</label>
						</div> <!-- /poll-question-mod -->
						<div class="radio-mod">
							<input class="radio-btn" type="radio" value="question" name="poll-question" id="question-02"> <label class="radio-label" for="question-02">Radio Option 02</label>
						</div> <!-- /poll-question-mod -->
						<div class="radio-mod">
							<input class="radio-btn" type="radio" value="question" name="poll-question" id="question-03"> <label class="radio-label" for="question-03">Radio Option 03</label>
						</div> <!-- /poll-question-mod -->
					</form>
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~~~~~~~
			 Text Input
			~~~~~~~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Text Input' } %}

				{% block markup %}
					<form class="form sidesaddle" action="#" method="post">
						<div class="form-row">
							<label class="form-label" for="standard-input-4">Sidesaddle Label</label>
							<div class="input-mod">
								<input id="standard-input-4" type="text" name="standard-input-4" placeholder="Standard text input field">
							</div> <!-- /.input -->
						</div> <!-- /.form-row -->
					</form> <!-- /.form -->
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~~~~~~~
			 Text Area
			~~~~~~~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
