{# Style Guide Source #}

{% extends "/style-guide/templates/style-guide.twig" %}

{# Variables #}
{% set body_classes = 'style-bd-inner' %}
{% set code_highlights = true %}
{% set style_mod = 'style-guide/templates/components/style-mod.twig' %}

{% block header_scripts %}
    <link rel="stylesheet" type="text/css" href="//cloud.typography.com/761468/803902/css/fonts.css" />
    <link rel="stylesheet" type="text/css" href="{{path}}/css/backgrounds.css"/>
    <link rel="stylesheet" type="text/css" href="{{path}}/css/site.css"/>
    <link rel="stylesheet" type="text/css" href="{{path}}/style-guide/css/style-guide-source.css"/>
    <link rel="stylesheet" type="text/css" href="{{path}}/style-guide/css/style-guide-overrides.css"/>
{% endblock header_scripts %}

{% block footer_scripts %}
	<script type="text/javascript" src="{{path}}/style-guide/bower_components/google-code-prettify/bin/prettify.min.js"></script>
{% endblock footer_scripts %}


{% block content %}

<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->
<!-- Header 								-->
<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->

<div class="style-content" id="style-content">

	<div class="style-main">

		<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->
		<!-- Typography 							-->
		<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->

		<h2 class="style-group-h">Typography</h2>

		<section id="typography" class="typography">

			{#
			~~~~~~~~~~~~~~~~~~
			 Headlines
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Headlines' } %}

				{% block markup %}
					<h1 class="h1">Headline Level 1</h1>
					<h2 class="h2">Headline Level 2</h2>
					<h3 class="h3">Headline Level 3</h3>
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~
			 Headlines with Links
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Headlines with Links' } %}

				{% block markup %}
					<h1 class="h1"><a href="#">Headline Level 1 With Link</a></h1>
					<h2 class="h2"><a href="#">Headline Level 2 With Link</a></h2>
					<h3 class="h3"><a href="#">Headline Level 3 With Link</a></h3>
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~
			 Section Headers
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Section Headers' } %}

				{% set descriptions = [
					'Describes the contents of a section (for instance, Must Reads)',
					'Fancy h3 should be used sparingly'
					]
				%}

				{% block markup %}
					<h1 class="section-h1"><i class="section-txt">Section h1</i></h1>
					<h2 class="section-h2">Section h2</h2>
					<h3 class="section-h3">Section h3</h3>
					<h4 class="section-h4">Section h4</h4>
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~
			 Section Headers with Links
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Section Headers with Links' } %}

				{% set descriptions = [
					'Describes the contents of a section (for instance, Must Reads)',
					'Fancy h3 should be used sparingly'
					]
				%}

				{% block markup %}
					<h1 class="section-h1"><a href="#" class="section-txt">Section h1</a></h1>
					<h2 class="section-h2"><a href="#">Section h2</a></h2>
					<h3 class="section-h4"><a href="#">Section h3</a></h3>
				{% endblock markup %}

			{% endembed %}


			{#
			~~~~~~~~~~~~~~~~~~
			 Links
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Links',
						 class: 'link-types'
			} %}

				{% set descriptions = [
					'Used for cover teases',
					'May appear with an illustration (.illo) or without (.no-illo)'
					]
				%}

				{% block markup %}
					<a href="#" class="link">Primary Link</a>
					<a href="#" class="link-lt">Light Link</a>
					<a href="#" class="link-secondary">Secondary Link</a>
				{% endblock markup %}

			{% endembed %}

		</section> <!-- typography -->


		<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->
		<!-- Navigation 							-->
		<!-- ~~~~~~~~~~~~~~~~~~~~~~	-->

		<h2 class="style-group-h">Navigation</h2>

		<section id="Navigation" class="Navigation">

			{#
			~~~~~~~~~~~~~~~~~~
			 Main Navigation
			~~~~~~~~~~~~~~~~~~
			#}
			{% embed style_mod
				with { title:'Main Navigation' } %}

				{% block markup %}
					<nav class="hp-nav" role="navigation">
						<ul class="nav-sections">
							<li class="nav-section"><a class="nav-section-link" href="/issues">Issues</a></li>
